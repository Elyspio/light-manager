{
	"compilerOptions": {
		"target": "ES5",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"DOM"
		],
		"sourceMap": true,
		"outDir": "build",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"pretty": true,
		"watch": true,
		"removeComments": true,
	},
	"compileOnSave": true,
	"exclude": [
		"node_modules",
		"build",
		"dist"
	],
	"include": [
		"src"
	]

}
